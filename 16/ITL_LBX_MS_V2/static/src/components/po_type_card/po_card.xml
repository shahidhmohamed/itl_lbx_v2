<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.PoCard" owl="1">
        <div class="col-lg-3 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center po-card">
                <div class="h1 fw-bold text-dark" style="font-size: 48px">
                    <span t-esc="props.done"/>
                </div>
                <div class="h3 text-muted">
                    <span t-esc="props.label"/>
                </div>
                <div class="h3 mt-5">
                    <span t-attf-class="text-#{ props.done > 0 ? 'success':'danger' }">
                        <span t-attf-class="me-1 fa fa-arrow-#{ props.done > 0 ? 'up':'down' }"/>
                        <span t-esc="props.done"/>
%
                    </span>
                    <span> since last period</span>
                </div>
            </div>
        </div>
    </t>
</templates>