<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="Po.Card" owl="1">
        <div class="col-lg-3 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center">
                <div class="h1 fw-bold text-dark" style="font-size: 48px">
                    <!-- Use 'text-primary' for blue if using Bootstrap -->
                    <span t-attf-class="text-#{ props.done > 0 ? 'primary':'danger' }">
                        <t t-esc="props.done"/>
                    </span>
                </div>
                <div class="h3 text-muted">
                    <span>
                        <t t-esc="props.label"/>
                    </span>
                </div>
            </div>
        </div>
    </t>
</templates>
