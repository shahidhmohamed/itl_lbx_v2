<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="OrderDetails" owl="1">
        <div class="col-lg-6 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white d-flex align-items-center justify-content-between order-card">
                <!-- Main value display -->
                <div class="d-flex flex-column">
                    <!-- Flex column for the label -->
                    <div class="h1 fw-bold text-gray" style="font-size: 20px">
                        <span t-esc="props.label"/>
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <!-- Flex column for the data -->
                    <div class="h1 fw-bold text-gray" style="font-size: 20px">
                        <span t-attf-class="text-#{ props.data > 0 ? 'success':'danger' }" t-esc="props.data"/>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
