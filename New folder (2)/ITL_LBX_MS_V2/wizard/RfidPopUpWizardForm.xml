<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rfid_response_wizard_form" model="ir.ui.view">
        <field name="name">rfid.response.wizard.form</field>
        <field name="model">rfid.response.wizard</field>
        <field name="arch" type="xml">
            <form string="RFID" class="custom-wizard-size" style="height: 400px; overflow-y: auto; font-family: monospace; white-space: pre-wrap; padding: 10px;">
                <script>
                    $(document).ready(function() {
                        $('.modal-dialog').css({'max-width': '497px'});
                        $('.modal-content').css({'max-height': '100%'});
                    });
                </script>
                <field name="response_content" nolabel="1" readonly="1"/>
                <footer>
                    <button string="Close" class="btn-primary" type="object" name="action_close"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
